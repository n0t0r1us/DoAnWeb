@model IEnumerable<BookStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "CategoryName", rowsPerPage: 5);
}



<h2 style="text-align:center">QUẢN LÝ THỂ LOẠI</h2>


<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: antiquewhite;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("Index", "Categories", FormMethod.Post))
        {
            @Html.AntiForgeryToken()


            <table class="table1" align="center">
                <tr>
                    <td>
                        <div>ID</div>
                    </td>
                    <td>

                        <input style="margin-bottom:5px; margin-left:5px" type="text" name="id"
                               class="form-control" id="inputEmail3" placeholder="TimKiem">
                    </td>

                </tr>
                <tr>
                    <td>Tên Thể Loại</td>
                    <td>

                        <input style="margin-bottom:5px; margin-left:5px" type="text" name="ten" class="form-control"
                               id="inputEmail3" placeholder="Tìm Kiếm">
                    </td>

                </tr>

                <tr>
                    <td></td>
                    <td>



                        <button type="submit" class="btn btn-success" style="width:100px; margin-left:5px">Tìm kiếm</button>
                        <button type="button" class="btn btn-danger" style="width:100px;
               " onclick="location.href='@Url.Action("Index", "Categories/Index")'">
                            Nhập mới
                        </button>
                    </td>
                </tr>
            </table>}
    </div>
    <hr />

    <p>
        @Html.ActionLink("Thêm mới thể loại", "Create")
    </p>

    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
                          tableStyle: "table table-sm table-bordered table-hover table-striped",
                          headerStyle: "thead-dark",
                          footerStyle: "grid-footer",
                          fillEmptyRows: true,
                          mode: WebGridPagerModes.Numeric,
                          alternatingRowStyle: "alternatingRowStyle",
                          columns: new[]  // colums in grid
                          {
            grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),

            grid.Column("CategoryID","ID"),
              grid.Column("CategoryName","Tên Thể loại"),
            grid.Column("CategoryDescription","Mô tả"),
            grid.Column("CategoryGroup.GroupName","Nhóm"  ),
            grid.Column("Url","url"),
            grid.Column("Chức năng", format: @<text>
    <a href="@Url.Action("Details",
                        new { id = item.CategoryID})" class="edit-btn"><abbr title="Xem chi tiết"><img src="~/Assets/books/details.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Edit",
                        new { id = item.CategoryID})" class="edit-btn"><abbr title="Xem chi tiết"><img src="~/Assets/books/edit.png" width="20" height="20" /></abbr></a>
            </text>),
            }
          )
    </div>

</body>
</html>