@model Web_61131562.Models.EF.MatHang
@{
    ViewBag.Title = "Cập Nhật Mặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/mathang" class="nav-link">Mặt Hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập Nhật</a>
        </li>
    </ul>}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập Nhật Mặt Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Mặt Hàng</a></li>
                    <li class="breadcrumb-item active">Cập Nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông Tin Cập Nhật Mặt Hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Sua", "MatHang", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.MaMH)
                        @Html.HiddenFor(x => x.NgayTao)
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông Tin Chung</a></li>
                                    @*<li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Hình Ảnh</a></li>*@
                                    <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">SEO</a></li>
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên Mặt Hàng</label>
                                            @Html.TextBoxFor(x => x.TenMH, new { @class = "form-control", @placeholder = "Tên Mặt Hàng" })
                                            @Html.ValidationMessageFor(x => x.TenMH, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Alias</label>
                                            @Html.TextBoxFor(x => x.Alias, new { @class = "form-control", @placeholder = "Alias" })
                                            @Html.ValidationMessageFor(x => x.Alias, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">SKU</label>
                                            @Html.TextBoxFor(x => x.CodeMatHang, new { @class = "form-control", @placeholder = "Mã Mặt Hàng" })
                                            @Html.ValidationMessageFor(x => x.CodeMatHang, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Loại Mặt Hàng</label>
                                            @Html.DropDownListFor(x => x.MaLMH, ViewBag.LoaiMH as SelectList, "-Chọn Loại Mặt Hàng-", new { @class = "form-control", @placeholder = "Mô Tả" })
                                            @Html.ValidationMessageFor(x => x.MaLMH, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô Tả</label>
                                            @Html.TextAreaFor(x => x.MoTa, new { @class = "form-control", @placeholder = "Mô Tả" })
                                            @Html.ValidationMessageFor(x => x.MoTa, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Chi Tiết Mặt Hàng</label>
                                            @Html.TextAreaFor(x => x.ChiTiet, new { @class = "form-control", @id = "txtChiTiet" })
                                            @Html.ValidationMessageFor(x => x.ChiTiet, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Số Lượng</label>
                                                    @Html.TextBoxFor(x => x.SoLuong, new { @class = "form-control", @Value = "1" })
                                                    @Html.ValidationMessageFor(x => x.SoLuong, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá Bán</label>
                                                    <input type="text" name="demoGiaBan" value="@Model.GiaBan" id="demoGiaBan" class="form-control auto" data-a-dec="," data-a-sep="." />
                                                    @Html.HiddenFor(x => x.GiaBan, new { @class = "", @placeholder = "Giá Bán" })
                                                    @Html.ValidationMessageFor(x => x.GiaBan, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá Khuyến Mãi</label>
                                                    <input type="text" name="demoGiaKM" id="demoGiaKM" value="@Model.GiaKM" class="form-control auto" />
                                                    @Html.HiddenFor(x => x.GiaKM, new { @class = "form-control", @placeholder = "Giá Khuyến Mãi" })
                                                    @Html.ValidationMessageFor(x => x.GiaKM, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Giá Nhập</label>
                                                    <input type="text" name="demoGiaGoc" id="demoGiaGoc" value="@Model.GiaGoc" class="form-control auto" />
                                                    @Html.HiddenFor(x => x.GiaGoc, new { @class = "form-control", @placeholder = "Giá Gốc" })
                                                    @Html.ValidationMessageFor(x => x.GiaGoc, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsActive, new { @class = "custom-control-input", @id = "customCheckbox2", @checked = "checked" })
                                                        <label for="customCheckbox2" class="custom-control-label">Hiển Thị</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsMHBanChay, new { @class = "custom-control-input", @id = "IsMHNoiBatCheckboxCheckbox" })
                                                        <label for="IsMHNoiBatCheckboxCheckbox" class="custom-control-label">Bán Chạy</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsMHNoiBat, new { @class = "custom-control-input", @id = "IsMHNoiBatCheckbox" })
                                                        <label for="IsMHNoiBatCheckbox" class="custom-control-label">Nổi Bật</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(x => x.IsMHSale, new { @class = "custom-control-input", @id = "IsSaleCheckbox" })
                                                        <label for="IsSaleCheckbox" class="custom-control-label">Khuyến Mãi</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.tab-pane -->


                                    <div class="tab-pane" id="settings">
                                        <form class="form-horizontal">
                                            <div class="form-group row">
                                                <label for="inputName" class="col-sm-2 col-form-label">SEO Tiêu Đề</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(x => x.SeoTieuDe, new { @class = "form-control", @placeholder = "SEO Tiêu Đề" })
                                                    @Html.ValidationMessageFor(x => x.SeoTieuDe, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputEmail" class="col-sm-2 col-form-label">SEO Từ Khóa</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(x => x.SeoTuKhoa, new { @class = "form-control", @placeholder = "SEO Từ Khóa" })
                                                    @Html.ValidationMessageFor(x => x.SeoTuKhoa, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputName2" class="col-sm-2 col-form-label">SEO Mô Tả</label>
                                                <div class="col-sm-10">
                                                    @Html.TextBoxFor(x => x.SeoMoTa, new { @class = "form-control", @placeholder = "SEO Mô Tả" })
                                                    @Html.ValidationMessageFor(x => x.SeoMoTa, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.tab-pane -->
                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Lưu Lại</button>
                                <a href="/admin/mathang" class="btn btn-danger">Quay Lại</a>
                            </div>
                        </div> <!-- /.card -->

                    }
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            $('.auto').autoNumeric('init');
            $('#demoGiaBan').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoGiaBan').autoNumeric('get');
                $('#GiaBan').val(demoGet);
                $('#GiaBan').autoNumeric('set', demoGet);
            });
            $('#demoGiaKM').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoGiaKM').autoNumeric('get');
                $('#GiaKM').val(demoGet);
                $('#GiaKM').autoNumeric('set', demoGet);
            });
            $('#demoGiaGoc').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoGiaGoc').autoNumeric('get');
                $('#GiaGoc').val(demoGet);
                $('#GiaGoc').autoNumeric('set', demoGet);
            });
            CKEDITOR.replace('txtChiTiet', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
           
        });
          

    </script>
}

