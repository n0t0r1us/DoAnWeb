                        // Khởi tạo bản đồ
                        var map = L.map('map').setView(nhaTrangUni, 18); // zoom cao hơn

                        // Nguồn bản đồ free
                        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                            attribution: '&copy; OpenStreetMap'
                        }).addTo(map);

                        // Marker
                        L.marker(nhaTrangUni).addTo(map)
                            .bindPopup("<b>Đại học Nha Trang</b><br>Gặp Tôi Ở Đây! ❤")
                            .openPopup();
                    </script>

