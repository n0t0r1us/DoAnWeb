@model PagedList.PagedList<Web_61131562.Models.EF.MatHang>
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh Sách Mặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/trangchu" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/danhmuc" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css" />
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Mặt Hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/mathang/them" class="btn btn-primary">Thêm Mới</a>
                <a href="#" class="btn btn-danger" id="BtnXoaTatCa">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            @*<div class="row">
                    <div class="col-6">
                        @using (Html.BeginForm("index", "TinTuc", FormMethod.Get, new { }))
                        {

                            <div class="input-group input-group-sm">
                                @Html.TextBox("Searchtext", null, new { @class = "form-control" })

                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-info btn-flat">Tìm Kiếm</button>
                                </span>
                            </div>
                        }

                    </div>

                </div>*@
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="ChonTatCa" /></th>
                        <th>STT</th>
                        <th>Hình Ảnh</th>
                        <th>Tên Mặt Hàng</th>
                        <th>Danh Mục</th>
                        <th>Số Lượng</th>
                        <th>Giá Bán</th>
                        <th>Ngày Tạo</th>
                        <th>Home</th>
                        <th>Sale</th>
                        <th>Hiển Thị</th>
                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {

                            var strCheck = item.IsActive ? "<i class = 'fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHome = item.IsHome ? "<i class = 'fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckSale = item.IsMHSale ? "<i class = 'fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                    <tr id="trow_@item.MaMH">
                        <td><input type="checkbox" class="cbkItem" value="@item.MaMH" /></td>
                        <td class="text-center align-middle">@i</td>
                        <td class="text-center align-middle"><img class="imgmathang" data-id="@item.MaMH" src="@item.AnhMH.FirstOrDefault(x=>x.MacDinh).Anh" width="50" /></td>
                        <td>@item.TenMH</td>
                        <td>@item.LoaiMH.TenLMH</td>
                        <td>@item.SoLuong</td>
                        <td>@item.GiaBan</td>
                        <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                        <td class="text-center" style="white-space: nowrap; vertical-align: middle;">
                            <a href='#' data-id="@item.MaMH" class="btnHome">@Html.Raw(strCheckHome)</a>
                        </td>
                        <td class="text-center" style="white-space: nowrap; vertical-align: middle;">
                            <a href='#' data-id="@item.MaMH" class="btnSale">@Html.Raw(strCheckSale)</a>
                        </td>
                        <td class="text-center" style="white-space: nowrap; vertical-align: middle;">
                            <a href='#' data-id="@item.MaMH" class="btnActive">@Html.Raw(strCheck)</a>
                        </td>
                        <td>
                            <a href="/admin/mathang/sua/@item.MaMH" class="btn btn-sm btn-primary">Sửa</a>
                            <a href="#" data-id="@item.MaMH" class="btn btn-sm btn-danger btnXoa">Xóa</a>
                        </td>
                    </tr>
                            i++;

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>

                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
@section styles {
    <style>
        th {
            white-space: nowrap !important;
        }
    </style>
}
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
</div>
@section scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            //hiển thị form upload ảnh
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '500',
                width: '600',
                resizable: true,
                title: 'Quản Lý Ảnh Mặt Hàng',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on("click", ".imgmathang", function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/admin/AnhMH/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });
            $('body').on('click', '#BtnXoaTatCa', function (e) {
                e.preventDefault();
                var str = "";
                var checkBox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkBox.each(function () {
                    if (this.checked) {
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkBox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                        var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                        if (conf === true) {
                            $.ajax({
                                url: '/admin/tintuc/xoaTatCa',
                                type: 'POST',
                                data: { ids: str },
                                success: function (rs) {
                                    if (rs.success) {
                                        location.reload();
                                    }
                                }
                            });
                        }
                    }

            });

            $('body').on('change', '#ChonTatCa', function () {
                var checkStatus = this.checked;
                var checkBox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkBox.each(function () {
                   this.checked = checkStatus;
                   if (this.checked) {
                       checkBox.attr('selected', 'checked');
                   } else {
                       checkBox.attr('selected', '');
                   }
                });
            });
            $('body').on('click', '.btnXoa', function () {
                    var id = $(this).data("id");
                    var conf = confirm('Bạn có muốn xóa bản ghi này không ?');
                    if (conf == true) {
                        $.ajax({
                            url: '/admin/mathang/xoa',
                            type: 'POST',
                            data: { id: id },
                            success: function (rs) {
                                if (rs.success) {
                                    $('#trow_' + id).remove();
                                }
                            }
                        });
                    }
            });
            $('body').on('click', '.btnHome', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/admin/MatHang/IsHome',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isHome) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                                //$(this).find("i").removeClass("fas fa-times text-danger");
                                //$(this).find("i").addClass("fa fa-check text-success");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }

                    }
                });
            });

            $('body').on('click', '.btnSale', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/admin/MatHang/IsMHSale',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        debugger;
                        if (rs.success) {
                            if (rs.isMHSale) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                                //$(this).find("i").removeClass("fas fa-times text-danger");
                                //$(this).find("i").addClass("fa fa-check text-success");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }

                    }
                });
            });
            $('body').on('click', '.btnActive', function (e) {
                    e.preventDefault();
                    var btn = $(this);
                    var id = btn.data("id");
                    $.ajax({
                        url: '/admin/MatHang/IsActive',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            debugger;
                            if (rs.success) {
                                if (rs.isActive) {
                                    btn.html("<i class='fa fa-check text-success'></i>");
                                    //$(this).find("i").removeClass("fas fa-times text-danger");
                                    //$(this).find("i").addClass("fa fa-check text-success");
                                } else {
                                    btn.html("<i class='fas fa-times text-danger'></i>");
                                }
                            }

                        }
                    });
                });
            });
    </script>
}

