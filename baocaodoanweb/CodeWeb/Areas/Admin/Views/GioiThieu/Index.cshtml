@model IEnumerable<Web_61131562.Models.EF.GioiThieu>
@{
    ViewBag.Title = "Danh Sách Giới Thiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/trangchu" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/gioithieu" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý @ViewBag.Title</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/trangchu">Trang Chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/gioithieu/them" class="btn btn-primary">Thêm Mới</a>
                <a href="#" class="btn btn-danger" id="BtnXoaTatCa">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="ChonTatCa" /></th>
                        <th>STT</th>
                        <th>Hình Ảnh</th>
                        <th>Tiêu Đề Giới Thiệu</th>
                        <th>Ngày Tạo</th>
                        <th>Hiển Thị</th>
                        <th>Thứ Tự</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            var strCheck = item.IsActive ? "<i class = 'fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.MaGT">
                                <td><input type="checkbox" class="cbkItem" value="@item.MaGT" /></td>
                                <td>@i</td>
                                <td><img src="@item.Anh" width="50" /></td>
                                <td>@item.TieuDeGT</td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    <a href='#' data-id="@item.MaGT" class="btnActive">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/gioithieu/sua/@item.MaGT" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.MaGT" class="btn btn-sm btn-danger btnXoa">Xóa</a>
                                </td>
                            </tr>
                            i++;

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '#BtnXoaTatCa', function (e) {
                e.preventDefault();
                var str = "";
                var checkBox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkBox.each(function () {
                    if (this.checked) {
                        checkBox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i === 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkBox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/gioithieu/xoaTatCa',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }

            });


            $('body').on('change', '#ChonTatCa', function () {
                var checkStatus = this.checked;
                var checkBox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkBox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkBox.attr('selected','checked');
                    } else {
                        checkBox.attr('selected', '');
                    }
                });
            });
            $('body').on('click', '.btnXoa', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này không ?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/gioithieu/xoa',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                    $.ajax({
                        url: '/admin/gioithieu/IsActive',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            debugger;
                            if (rs.success) {
                                if (rs.isActive) {
                                    btn.html("<i class='fa fa-check text-success'></i>");
                                    //$(this).find("i").removeClass("fas fa-times text-danger");
                                    //$(this).find("i").addClass("fa fa-check text-success");
                                } else {
                                    btn.html("<i class='fas fa-times text-danger'></i>");
                                }
                            }

                        }
                    });
            });
        });
    </script>
}

