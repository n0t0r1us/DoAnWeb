@model Web_61131562.Models.EF.DonGia
@using PagedList;
@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/trangchu" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi Tiết Đơn Hàng</a>
        </li>
    </ul>
}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi Tiết Đơn Hàng</h3>


        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã Đơn Hàng</label>
                        <p class="form-control">@Model.Code</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ Tên Khách Hàng</label>
                        <p class="form-control">@Model.TenKH</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng Tiền</label>
                        <p class="form-control">@Web_61131562.Common.Common.FormatNumber(Model.TongTien, 0) đ</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>SDT</label>
                        <p class="form-control">@Model.SDT</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày Tạo</label>
                        <p class="form-control">@Model.NgayTao.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        <p class="form-control">@(Model.LoaiThanhToan ==1 ?"Chưa Thanh Toán":"Đã Thanh Toán")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2>Danh Sách Mặt Hàng</h2>
                </div>
                <div class="col-12">
                    @Html.Action("Partial_MatHang", "DonHang",new { id=Model.MaDG })
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
